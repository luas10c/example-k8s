{
  "compilerOptions": {
    "baseUrl": ".",

    "strict": true,

    "skipLibCheck": true,

    "outDir": "dist",

    "esModuleInterop": true,

    "removeComments": true,

    "module": "es2020",
    "target": "es2020",

    "moduleResolution": "node",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "paths": {
      "#/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}